#global variable
$country_name="India"
class Country
  #constant variable
  PLANET="earth"
  #class variable
  @@state_name="uttarakhand"
    #local variable inside method signature(name)
    def city(name)
	puts "city is #{name.inspect}"
      #instance variable
      @city_name=name
      puts "planet is #{PLANET}"
      puts "country name is #$country_name"
      puts "state name is #@@state_name"
      puts "city name is #@city_name"
    end
end
#creating object of class Country
count=Country.new
#calling method city
count.city("Dehradun")
      
